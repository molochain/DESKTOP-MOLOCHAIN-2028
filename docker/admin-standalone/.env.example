# Admin Service Environment Variables
# Copy to .env and fill in values

# Database (use same as main platform)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret (MUST match main platform for cross-service auth)
JWT_SECRET=your-jwt-secret-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# Auth Service URL (internal Docker network or host)
AUTH_SERVICE_URL=http://172.22.0.1:7010

# Redis URL (if available)
REDIS_URL=redis://172.22.0.1:6379

# Main Platform URL
MAIN_PLATFORM_URL=https://molochain.com

# CMS API URL
CMS_API_URL=https://cms.molochain.com/api
