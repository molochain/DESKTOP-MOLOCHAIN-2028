# =============================================================================
# Molochain Docker Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=molochain
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=molochain_production
DATABASE_URL=postgresql://molochain:your-secure-password-here@postgres:5432/molochain_production

# -----------------------------------------------------------------------------
# Security Secrets
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-minimum-64-characters-long-for-security
SESSION_SECRET=your-session-secret-minimum-64-characters-long-for-security

# -----------------------------------------------------------------------------
# Token Configuration
# -----------------------------------------------------------------------------
TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d

# -----------------------------------------------------------------------------
# Service URLs (Internal Docker Network)
# -----------------------------------------------------------------------------
AUTH_SERVICE_URL=http://auth:7010
ADMIN_SERVICE_URL=http://admin:7000
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# External Service URLs
# -----------------------------------------------------------------------------
CMS_API_URL=https://cms.molochain.com/api
OTMS_API_URL=https://opt.molochain.com/v1

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=https://molochain.com,https://admin.molochain.com
ALLOWED_DOMAINS=molochain.com,admin.molochain.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_AI_ENABLED=false
RATE_LIMIT_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
DEBUG=

# -----------------------------------------------------------------------------
# Migrations
# -----------------------------------------------------------------------------
RUN_MIGRATIONS=false
