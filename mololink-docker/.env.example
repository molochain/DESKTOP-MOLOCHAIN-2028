# Mololink Service Environment Variables
# Copy this file to .env and fill in the values

# ==============================================
# Application Settings
# ==============================================
NODE_ENV=production
PORT=5001

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://molodb:Passwd1122%@host.docker.internal:5432/mololinkdb

# Alternative: Individual DB settings
DB_HOST=host.docker.internal
DB_PORT=5432
DB_NAME=mololinkdb
DB_USER=molodb
DB_PASSWORD=Passwd1122%

# ==============================================
# Authentication
# ==============================================
# Shared JWT Secret (MUST match auth-service)
JWT_SECRET=molochain-production-jwt-secret-2024

# Local fallback JWT secret
LOCAL_JWT_SECRET=mololink-secret-key-change-in-production

# ==============================================
# Auth Service (SSO)
# ==============================================
# Central auth service URL (inside Docker network)
AUTH_SERVICE_URL=http://auth-service:3002

# SSO Configuration
SSO_ISSUER=auth.molochain.com
SSO_AUDIENCE=molochain.com,mololink.molochain.com,opt.molochain.com,cms.molochain.com
SSO_COOKIE_DOMAIN=.molochain.com
SSO_LOGIN_URL=https://auth.molochain.com/login
SSO_LOGOUT_URL=https://auth.molochain.com/logout

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://redis-session:6379

# ==============================================
# CORS Settings
# ==============================================
CORS_ORIGINS=https://mololink.molochain.com,https://molochain.com,https://www.molochain.com,https://auth.molochain.com,https://opt.molochain.com,https://cms.molochain.com

# ==============================================
# File Upload Settings
# ==============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/app/public/uploads
