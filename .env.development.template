# MoloChain Platform - Development Environment Template
# Copy this to .env on your local development machine

# ===== Application Environment =====
NODE_ENV=development
VITE_APP_ENV=development
PORT=5000
HOST=0.0.0.0

# ===== API Base URLs (Development - Local Services) =====
VITE_API_CMS_BASE_URL=http://localhost:8000/api
VITE_API_OTMS_BASE_URL=http://localhost:3000/v1
VITE_API_GODLAYER_BASE_URL=http://localhost:5000/api

# ===== Database Configuration =====
DATABASE_URL=postgresql://username:password@localhost:5432/molochaindb

# ===== Session & Security =====
SESSION_SECRET=your-dev-session-secret
JWT_SECRET=your-dev-jwt-secret
CSRF_PROTECTION=true

# ===== CORS Configuration =====
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# ===== WebSocket Configuration =====
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# ===== Caching Configuration =====
ENABLE_REDIS_CACHE=false
CACHE_TTL_DEFAULT=300

# ===== Logging Configuration =====
LOG_LEVEL=debug
ENABLE_JSON_LOGGING=false

# ===== Feature Flags =====
FEATURE_AI_ENABLED=false
FEATURE_GUEST_MODE=true
FEATURE_ADVANCED_ANALYTICS=true

# ===== Development Settings =====
SHOW_DETAILED_ERRORS=true
