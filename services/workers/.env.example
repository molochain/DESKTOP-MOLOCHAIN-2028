# Background Workers Environment Configuration
# Copy this file to .env and update values

# PostgreSQL Connection
PGHOST=molochain-postgres
PGPORT=5432
PGUSER=molochain
PGPASSWORD=your-postgres-password-here

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Health Monitor Settings
CHECK_INTERVAL=60
CONTAINERS_TO_MONITOR=molochain-admin,molochain-app,molochain-api-gateway,auth-service,mololink-app

# Prometheus (optional)
PROMETHEUS_PUSHGATEWAY=http://rayanava-prometheus:9091

# Notifications (optional)
SLACK_WEBHOOK_URL=
ALERT_EMAIL=
