# Communications Hub Environment Variables

# Server
PORT=7020
NODE_ENV=production
LOG_LEVEL=info

# Redis
REDIS_URL=redis://comms-redis:6379

# Database (for delivery logs persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/molochain

# Plesk API
PLESK_API_URL=https://your-server.com:8443
PLESK_API_KEY=your-plesk-api-key
PLESK_SKIP_TLS_VERIFY=false

# Email (SMTP)
SMTP_HOST=mail.molochain.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@molochain.com
FROM_NAME=MoloChain

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp (Meta Cloud API)
WHATSAPP_API_KEY=your-meta-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
